<div class="booyah-box col-10 offset-1"> <!-- Infobox, 10/12 screen width, indented by 1/12 -->
  <h1>Edit Your Place</h1>
  <%= simple_form_for @place do |f| %> <!-- Form to edit existing place -->
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %> <!-- End of Rails code -->
</div> <!-- class="booyah-box" -->